generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id String @id
  title String @unique
  author String
  like Int
  description String
  article String
  createdAt DateTime
  authorId String
  Blogger Blogger @relation(fields: [authorId], references: [id])
}

