model Blogger {
  id String @id
  name String
  email String @unique
  avatar String?
  description String?
  password String
  Posts Post[]
  Token Token[]
}

model Token {
  token String @unique
  id String @id
  Blogger Blogger @relation(fields: [BloggerId], references: [id])
  BloggerId String
}

